#include<stdio.h> 
 int main() 
 { 
         float s,salary,bonus; 
         char grade; 
         printf("Enter your grade = "); 
         scanf("%c",&grade); 
         if(grade=='A') 
         { 
                 printf("Enter the salary = "); 
                 scanf("%f",&salary); 
                 if(salary>0) 
                 { 
                         if(salary>10000) 
                         { 
                                 bonus=salary*0.5; 
                                 s=salary+bonus; 
                                 printf("The bonus amount = %f",bonus); 
                                 printf("\nThe total amount = %f",s); 
                         } 
                         else  
                         { 
                                 bonus=salary*0.7; 
                                 s=salary+bonus; 
                                 printf("The bonus amount = %f",bonus); 
                                 printf("\nThe total amount = %f",s); 
                         } 
                 } 
                 else  
                 { 
                         printf("Invalid Input"); 
                 } 
         } 
         else if(grade=='B') 
         { 
                 printf("Enter the salary = "); 
                 scanf("%f",&salary); 
                 if(salary>0) 
                 { 
                         if(salary>10000) 
                         { 
                                 bonus=salary*0.10; 
                                 s=salary+bonus; 
                                 printf("The bonus amount = %f",bonus); 
                                 printf("\nThe total amount = %f",s); 
                         } 
                         else  
                         { 
                                 bonus=salary*0.10; 
                                 s=salary+bonus; 
                                 printf("The bonus amount = %f",bonus); 
                                 printf("\nThe total amount = %f",s);                 
                         } 
                 } 
                 else  
                 { 
                         printf("Invalid Input"); 
                 } 
         } 
         else  
         { 
                 printf("Invalid Input"); 
         } 
         return 0; 
 }
